{
    "version": "0.2.0",
    "configurations":
    [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "pybo:create_app()",
                "FLASK_ENV": "development"
